<% if node[:fluentd][:mysql] %>
<match parsnip.*>
  type mysql
  host <%= node[:fluentd][:mysql][:host] %>
  database <%= node[:fluentd][:mysql][:database] %>
  username <%= node[:fluentd][:mysql][:username] %>
  password <%= node[:fluentd][:mysql][:password] %>
  table <%= node[:fluentd][:mysql][:table] %>
  key_names <%= node[:fluentd][:mysql][:key_names] %>
  sql INSERT IGNORE INTO <%= node[:fluentd][:mysql][:table] %> (<%= node[:fluentd][:mysql][:key_names] %>) VALUES (<%= ("?," * node[:fluentd][:mysql][:key_names].split(",").length)[0..-2] %>)
  flush_interval 10s
  retry_wait 1s
  retry_limit 17
  buffer_queue_limit 128
</match>
<% end %>

<% if node[:fluentd][:http] %>
<% node[:fluentd][:http].each do |conf| %>
<match <%= conf[:tag] %>>
  type bufferize
  buffer_type file
  buffer_path /var/log/fluentd/<%=conf[:tag]%>_http.buffer
  <config>
    type http
    endpoint_url <%= conf[:endpoint_url]
    <% if conf[:http_method] %>
    http_method <%= conf[:http_method] %>
    <% end %>
    raise_on_error true
  </config>
</match>
<% end %>
<% end %>

<% if node[:fluentd][:sidekiq] %>
<match sidekiq>
  type sidekiq
  redis_url <%= node[:fluentd][:sidekiq][:url] %>
  flush_interval 60s
  retry_wait 1s
  retry_limit 17
  buffer_queue_limit 128
  max_batch_size <%= node[:fluentd][:sidekiq][:batch_size] || 10 %>
</match>
<% end %>
