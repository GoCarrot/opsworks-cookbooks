set daemon 60
set mailserver <% if !node[:monit][:mailserver] %>localhost<% else %><%= node[:monit][:mailserver][:host] %> port <%= node[:monit][:mailserver][:port] %> username "<%= node[:monit][:mailserver][:username] %>" password "<%= node[:monit][:mailserver][:password] %>" <% end %>
set eventqueue
    basedir /var/monit
    slots 100
set logfile syslog
Include <%= node[:monit][:conf_dir] %>/*.monitrc
set httpd port 2812 and use the address localhost
  allow localhost
