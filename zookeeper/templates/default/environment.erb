NAME=zookeeper
ZOOCFGDIR=/etc/$NAME/conf

# TODO this is really ugly
# How to find out, which jars are needed?
# seems, that log4j requires the log4j.properties file to be in the classpath
CLASSPATH="$ZOOCFGDIR:/usr/share/java/lib/jline-0.9.94.jar:/usr/share/java/lib/log4j-1.2.16.jar:/usr/share/java/lib/netty-3.7.0.Final.jar:/usr/share/java/lib/slf4j-api-1.6.1.jar:/usr/share/java/lib/slf4j-log4j12-1.6.1.jar:/usr/share/java/zookeeper-3.4.6.jar"

ZOOCFG="$ZOOCFGDIR/zoo.cfg"
ZOO_LOG_DIR=/var/log/$NAME
USER=$NAME
GROUP=$NAME
PIDDIR=/var/run/$NAME
PIDFILE=$PIDDIR/$NAME.pid
SCRIPTNAME=/etc/init.d/$NAME
JAVA=/usr/lib/jvm/jre/bin/java
ZOOMAIN="org.apache.zookeeper.server.quorum.QuorumPeerMain"
ZOO_LOG4J_PROP="INFO,ROLLINGFILE"
JMXLOCALONLY=false
JAVA_OPTS="<%= node['zookeeper']['java_options'] %>"
